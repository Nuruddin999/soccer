<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
android:orientation="horizontal">
    <ImageView
            android:id="@+id/add_player_photo"
            android:layout_width="@dimen/playerphotosize" android:layout_height="@dimen/playerphotosize"/>
    <ImageView
            android:id="@+id/add_photo_button"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:clickable="true"
            android:layout_gravity="center"
    android:src="@drawable/ic_add_circle_black_24dp"/>
</LinearLayout>
   <EditText
           android:id="@+id/add_player_input_name"
           android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:hint="Имя игрока"
   android:layout_gravity="center"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_player_parent_parameterlist"
            android:layout_width="match_parent"
                                               android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    <Button
            android:id="@+id/save_player_button"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="save player"
    android:layout_margin="12dp"/>
</LinearLayout>